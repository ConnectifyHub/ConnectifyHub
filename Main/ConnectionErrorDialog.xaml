<Window x:Class="Main.ConnectionErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Main"
        mc:Ignorable="d"
        MinHeight="250"
        MinWidth="250"
        Title="Ошибка подключения к серверу!" Height="250" Width="300">
    <Window.Resources>
        <ResourceDictionary Source="MainStyle.xaml"/>
    </Window.Resources>
    <Grid>
        <TextBlock Text="Подключение к серверу было прервано." HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
            <Button Content="Повтор" Width="80" Height="30" Margin="0, 100, 0, 5" Click="RetryButton_Click"/>
            <Button Content="Выход" Width="80" Height="30" Margin="0, 100, 0, 5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
